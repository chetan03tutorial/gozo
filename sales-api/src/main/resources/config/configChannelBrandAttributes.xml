<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Root SYSTEM "./config.dtd">
<root>
    <section>
        CHANNEL_EXTRACT_MECHANISM
        <tag>
            EXTRACT_MECHANISM
            <value>DOMAIN</value>
            <!--  The possible values of CHANNEL_EXTRACT_MECHANISM are CONFIG/DOMAIN/HEADER -->
        </tag>
    </section>
    <!-- 
        The channel scope depends on the Extraction Mechanism configuration.
        The possible values for CHANNEL_SCOPE are - APPLICATION/SESSION.
        The possible tags for CHANNEL_SCOPE section are CONFIG/DOMAIN/HEADER (in consensus to EXTARCT_MECHANISM values)
        CHANNEL_SCOPE value is retrieved for the EXTRACT_MECHANISM configured above (CONFIG/DOMAIN/HEADER)
    -->
    <section>
        CHANNEL_SCOPE
        <tag>
            CONFIG
            <value>APPLICATION</value>
        </tag>
        <tag>
            DOMAIN
            <value>SESSION</value>
        </tag>
        <tag>
            HEADER
            <value>SESSION</value>
        </tag>
    </section>
    <section>
        CHANNEL_VALIDATION
        <tag>
            ENABLED
            <value>1</value>
            <!--  The possible values are 1- Enabled, 2- Disabled -->
        </tag>
        <tag>
            CHANNEL_VALIDATION_CLASS
            <value>com.lloydstsb.ea.validator.ChannelValidator</value>
            <!--  Fully qualified name of channel validator class, this class should implement IValidator Command-->
        </tag>
    </section>

    <section>
        BRAND_SCOPE
        <tag>
            SCOPE
            <value>SESSION</value>
            <!--  The possible values for BRAND_SCOPE are - APPLICATION/SESSION.-->
        </tag>
    </section>

    <section>
        SERVICE_TYPE_SCOPE
        <tag>
            SCOPE
            <value>APPLICATION</value>
            <!--  The possible values for SERVICE_TYPE_SCOPE are - APPLICATION/SESSION.-->
        </tag>
    </section>
    <section>
        BRAND_VALIDATION
        <tag>
            ENABLED
            <value>2</value>
            <!--  The possible values are 1- Enabled, 2- Disabled -->
        </tag>
        <tag>
            BRAND_VALIDATION_CLASS
            <value>com.lloydstsb.ea.validator.BrandValidator</value>
            <!--  Fully qualified name of brand validator class, this class should implement IValidator Command-->
        </tag>
    </section>
    <!-- Multichannel COM1 validation entry start here -->
    <section>
        POINT_OF_ORIGIN
        <tag>
            BRANCH
            <value>Branch</value>
        </tag>
        <tag>
            TELEPHONY
            <value>Telephony</value>
        </tag>
    </section>
    <section>
        POINT_OF_ORIGIN_SCOPE
        <tag>
            SCOPE
            <value>SESSION</value>
            <!--  The possible values for POINT_OF_ORIGIN_SCOPE are - SESSION.-->
        </tag>
    </section>
    <section>
        POINT_OF_ORIGIN_VALIDATION
        <tag>
            ENABLED
            <value>1</value>
            <!--  The possible values are 1- Enabled, 2- Disabled -->
        </tag>
        <tag>
            POINT_OF_ORIGIN_VALIDATION_CLASS
            <value>com.lloydstsb.ea.validator.PointOfOriginValidator</value>
            <!--  Fully qualified name of brand validator class, this class should implement IValidator Command-->
        </tag>
    </section>
    <!-- Multichannel COM1 validation entry end here -->
</root>